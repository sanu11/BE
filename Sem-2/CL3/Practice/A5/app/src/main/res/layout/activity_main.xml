<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanika.calci.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="23dp"
        android:id="@+id/input"
        android:textStyle="normal|bold"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickClear"
                android:id="@+id/clear" />


            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/neg" />

            <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickEqual"
                android:id="@+id/equal" />

            <Button
                android:text="del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickDel"
                android:id="@+id/del" />

        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-80dp"
    android:orientation="horizontal">


    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignLeft="@+id/input"
        android:layout_alignStart="@+id/input"
        android:layout_marginTop="91dp"
        android:onClick="onClickButton"
        android:id="@+id/one" />


    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignLeft="@+id/input"
        android:layout_alignStart="@+id/input"
        android:layout_marginTop="91dp"
        android:onClick="onClickButton"
        android:id="@+id/two" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignLeft="@+id/input"
        android:layout_alignStart="@+id/input"
        android:layout_marginTop="91dp"
        android:onClick="onClickButton"
        android:id="@+id/three" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_alignLeft="@+id/input"
        android:layout_alignStart="@+id/input"
        android:layout_marginTop="91dp"
        android:onClick="onClickButton"
        android:id="@+id/divide" />

</LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:orientation="horizontal">


            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/four" />


            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/five" />

            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/six" />

            <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/multiply" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:orientation="horizontal">


            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/seven" />


            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/eight" />

            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/nine" />

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/subtract" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:orientation="horizontal">


            <Button
                android:text="("
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/leftpar" />


            <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/zero" />

            <Button
                android:text=")"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/rightpar" />

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/add" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:orientation="horizontal">


            <Button
                android:text="sin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/sin" />


            <Button
                android:text="cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/cos" />

            <Button
                android:text="tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/tan" />

            <Button
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_alignLeft="@+id/input"
                android:layout_alignStart="@+id/input"
                android:layout_marginTop="91dp"
                android:onClick="onClickButton"
                android:id="@+id/dec" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
